<p class="back-link"><%= link_to "Back", products_path, class: "button back-button" %></p>

<section class="product">
  <%= image_tag @product.featured_image, class: "product-image" if @product.featured_image.attached? %>

  <section class="product-info">
    <% cache @product do %>
      <h1 class="product-title"><%= @product.name %></h1>
      <p class="product-description"><%= @product.description %></p>
    <% end %>

    <%= render "inventory", product: @product %>

    <% if authenticated? %>
      <div class="product-actions">
        <%= link_to "Edit", edit_product_path(@product), class: "button edit-button" %>
        <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "button delete-button" %>
      </div>
    <% end %>
  </section>
</section>
